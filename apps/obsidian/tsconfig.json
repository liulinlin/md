{
  "extends": "../../packages/config/tsconfig.base.json",
  "compilerOptions": {
    "composite": false,
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["node"],
    "noEmit": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "../../packages/shared/src/global.d.ts"],
  "exclude": ["node_modules"]
}
