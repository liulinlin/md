{
  "publisher": "doocs",
  "name": "doocs-md",
  "displayName": "doocs-md",
  "version": "0.0.1",
  "description": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/doocs/md"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.109.0"
  },
  "activationEvents": [],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "markdown-sidebar",
          "title": "Markdown Preview",
          "icon": "./public/icon-256-gray.png"
        }
      ]
    },
    "views": {
      "markdown-sidebar": [
        {
          "id": "markdown.preview.view",
          "name": "Preview",
          "icon": "./public/icon-256-gray.png"
        }
      ]
    },
    "commands": [
      {
        "command": "markdown.preview",
        "title": "Open Markdown Preview",
        "icon": {
          "light": "./public/icon-256-gray.png",
          "dark": "./public/icon-256-gray.png"
        }
      },
      {
        "command": "markdown.copyToClipboard",
        "title": "Copy to Clipboard",
        "category": "Markdown Preview"
      },
      {
        "command": "markdown.setFontSize",
        "title": "Set Font Size",
        "category": "Markdown Preview"
      },
      {
        "command": "markdown.setTheme",
        "title": "Set Theme",
        "category": "Markdown Preview"
      },
      {
        "command": "markdown.setPrimaryColor",
        "title": "Set Primary Color",
        "category": "Markdown Preview"
      },
      {
        "command": "markdown.setFontFamily",
        "title": "Set Font Family",
        "category": "Markdown Preview"
      },
      {
        "command": "markdown.toggleCountStatus",
        "title": "Toggle Count Status",
        "category": "Markdown Preview"
      },
      {
        "command": "markdown.toggleMacCodeBlock",
        "title": "Toggle Mac Code Block",
        "category": "Markdown Preview"
      },
      {
        "command": "markdown.toggleUseIndent",
        "title": "Toggle Use Indent",
        "category": "Markdown Preview"
      },
      {
        "command": "markdown.toggleUseJustify",
        "title": "Toggle Use Justify",
        "category": "Markdown Preview"
      },
      {
        "command": "markdown.toggleCiteStatus",
        "title": "Toggle Cite Status",
        "category": "Markdown Preview"
      },
      {
        "command": "markdown.toggleShowLineNumber",
        "title": "Toggle Show Line Number",
        "category": "Markdown Preview"
      },
      {
        "command": "markdown.setLegend",
        "title": "Set Legend",
        "category": "Markdown Preview"
      },
      {
        "command": "markdown.aiPolish",
        "title": "AI Polish",
        "category": "Markdown Preview"
      },
      {
        "command": "markdown.importFromUrl",
        "title": "Import from URL",
        "category": "Markdown Preview"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "markdown.preview",
          "group": "navigation",
          "when": "editorLangId == markdown"
        }
      ]
    },
    "configuration": {
      "title": "Markdown Preview",
      "properties": {
        "markdownPreview.customCSS": {
          "type": "string",
          "default": "",
          "description": "自定义 CSS 样式"
        },
        "markdownPreview.aiEndpoint": {
          "type": "string",
          "default": "https://proxy-ai.doocs.org/v1",
          "description": "AI 服务 API 端点"
        },
        "markdownPreview.aiModel": {
          "type": "string",
          "default": "Qwen/Qwen2.5-7B-Instruct",
          "description": "AI 模型名称"
        },
        "markdownPreview.aiApiKey": {
          "type": "string",
          "default": "",
          "description": "AI 服务 API Key"
        },
        "markdownPreview.aiTemperature": {
          "type": "number",
          "default": 1,
          "description": "AI 生成温度"
        },
        "markdownPreview.aiMaxTokens": {
          "type": "number",
          "default": 4096,
          "description": "AI 最大 token 数"
        },
        "markdownPreview.aiPolishPrompt": {
          "type": "string",
          "default": "你是一名资深的微信公众号科技长文写手。请将以下科技素材深度改写为适合微信公众号发布的长文。",
          "description": "AI 润色提示词"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "webpack",
    "watch": "webpack --watch",
    "build": "webpack --mode production --devtool hidden-source-map",
    "package": "vsce package --no-dependencies --allow-package-secrets github"
  },
  "dependencies": {
    "@md/core": "workspace:*",
    "@md/shared": "workspace:*",
    "@types/webpack": "^5.28.5",
    "isomorphic-dompurify": "^2.35.0",
    "juice": "^11.0.3",
    "postcss": "^8.5.6",
    "ts-loader": "^9.5.4",
    "tsconfig-paths-webpack-plugin": "^4.2.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@vscode/vsce": "^3.7.1",
    "webpack-cli": "^6.0.1"
  }
}
